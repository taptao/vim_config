    "nm  <space> <nop>

    "nm 0 ^
    "nm B ^
   "" nm E $
    "nm j gj
    "nm k gk
    "nm Y y$

    " Tab ctrl
    nm <c-h> gT
    nm <c-l> gt
    nm <tab> <c-w>w

    nnoremap x "_x
	nnoremap X "_X
	vm x "_x
	vm X "_X

	nnoremap <leader>diw "_diw
	vm <leader>diw "_diw

	nnoremap <leader>ciw "_ciw
	vm <leader>ciw "_ciw

    im jj <esc>
   
	nnoremap x "_x
	nnoremap X "_X
	vm x "_x
	vm X "_X
	
	nnoremap <leader>diw "_diw
	vm <leader>diw "_diw


    " stop arrow key
    noremap <Up> <NOP>
    noremap <Down> <NOP>
    noremap <Left> <NOP>
    noremap <Right> <NOP>

    nm <leader>qq :q!<cr>
    nm <leader>xx :qa!<cr>
    nm <leader>t  :set ft=
    nm <silent> <leader>/ :nohlsearch<CR>

    " time & date map
    nm <leader>da "=strftime("%y%m%d")<cr>p"
    nm <leader>ti "=strftime("%h:%m:%s")<cr>p"


